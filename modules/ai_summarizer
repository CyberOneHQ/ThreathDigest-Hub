# ==== Module Imports ====
import os
import json
from datetime import datetime
from pathlib import Path

# ==== Summary Logger ====
def log_article_summary(article_link, summary_text):
    try:
        # Prepare output path
        summary_dir = Path("data/logs/summaries")
        summary_dir.mkdir(parents=True, exist_ok=True)
        summary_file = summary_dir / f"summary_{datetime.utcnow().date()}.jsonl"

        # Prepare log entry
        entry = {
            "url": article_link,
            "summary": summary_text,
            "timestamp": datetime.utcnow().isoformat()
        }

        # Write to file in append mode
        with open(summary_file, "a", encoding="utf-8") as f:
            f.write(json.dumps(entry, ensure_ascii=False) + "\n")

    except Exception as e:
        print(f"[LOGGING ERROR] Failed to log summary for {article_link}: {e}")
